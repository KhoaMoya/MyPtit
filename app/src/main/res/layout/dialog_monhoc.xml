<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.khoa.myptit.thoikhoabieu.viewmodel.ChiTietMonHocViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_conner"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/nothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="@{viewModel.mShowNothing}"
            android:text="Tiết này không học"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/tenMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.mShowInfo}"
            android:text="@{viewModel.getTenMH()}"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorBlack" />

<!--        nhom-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:visibility="@{viewModel.mShowInfo}"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Nhóm:" />

            <TextView
                android:id="@+id/nhom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@{viewModel.getNhom()}"
                android:layout_gravity="center_horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

<!--        lop-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="@{viewModel.mShowInfo}"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Lớp:" />

            <TextView
                android:id="@+id/lop"
                android:layout_width="0dp"
                android:text="@{viewModel.getLop()}"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

<!--        phong-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="@{viewModel.mShowInfo}"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Phòng:" />

            <TextView
                android:id="@+id/phong"
                android:layout_width="0dp"
                android:text="@{viewModel.getPhong()}"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

<!--        giang vien-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="@{viewModel.mShowInfo}"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Giảng viên:" />

            <TextView
                android:id="@+id/giangvien"
                android:layout_width="0dp"
                android:text="@{viewModel.getGiangVien()}"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

<!--        tin chi-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="@{viewModel.mShowInfo}"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tín chỉ:" />

            <TextView
                android:id="@+id/tinchi"
                android:layout_width="0dp"
                android:text="@{viewModel.getTinChi()}"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

        <Button
            android:id="@+id/ghichu"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_button_color_primary"
            android:gravity="center"
            android:text="Thêm ghi chú"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </LinearLayout>
</layout>